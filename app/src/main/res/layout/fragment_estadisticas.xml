<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/estadisticas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jorge.gamesdebrief.fragments.Estadisticas">
    <LinearLayout
        android:id="@+id/linearContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
            <Button
                android:id="@+id/botonJuego"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:text="@string/juego"
                android:layout_weight="5"/>
            <Button
                android:id="@+id/botonGenero"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:text="@string/genero"
                android:layout_weight="5"/>
            <Button
                android:id="@+id/botonModo"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:text="@string/modo"
                android:layout_weight="5"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/listView"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/linearContainer"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="4">
            <TextView
                android:id="@+id/tipoDato"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_weight="5"
                android:textAllCaps="true"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:text="@string/partidasGanadas"
                android:textAlignment="center"
                android:layout_weight="5"
                android:textAllCaps="true"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:text="@string/partidasEmpatadas"
                android:textAlignment="center"
                android:layout_weight="5"
                android:textAllCaps="true"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:text="@string/partidasPerdidas"
                android:textAlignment="center"
                android:layout_weight="5"
                android:textAllCaps="true"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="80">
            <ListView
                android:id="@+id/listaDatos"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="5"/>
            <ListView
                android:id="@+id/listaPartidasGanadas"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="5"/>
            <ListView
                android:id="@+id/listaPartidasEmpatadas"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="5"/>
            <ListView
                android:id="@+id/listaPartidasPerdidas"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="5"/>
        </LinearLayout>
</LinearLayout>
</RelativeLayout>
